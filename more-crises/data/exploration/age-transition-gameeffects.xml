<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
    <!-- Famine Crisis -->
    <Modifier id="CARD_AT_CARTOGRAPHY_TECH" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_GRANT_PROGRESSION" permanent="true" run-once="true">
        <Argument name="Amount">1</Argument>
        <Argument name="SystemType">SYSTEM_TECH</Argument>
        <Argument name="FreeProgressionType">FREE_PROGRESSION_NODE_SPECIFIC</Argument>
        <Argument name="NodeType">NODE_TECH_EX_CARTOGRAPHY</Argument>
    </Modifier>
    <Modifier id="CARD_AT_WHARF_PRODUCTION" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_CONSTRUCTIBLE_PRODUCTION">
        <Argument name="ConstructibleType">BUILDING_WHARF</Argument>
        <Argument name="Percent">50</Argument>
    </Modifier>
    <Modifier id="CARD_AT_WORKER_MAINTENANCE" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_WORKER_MAINTENANCE_EFFICIENCY">
		<Argument name="YieldType">YIELD_FOOD, YIELD_HAPPINESS</Argument>
		<Argument name="Percent">50</Argument>
	</Modifier>
    <!-- Succession Crisis -->
    <Modifier id="CARD_AT_ALLIANCE_INFLUENCE" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_YIELD_PER_PLAYER_RELATIONSHIP">
		<Argument name="UseAlliances">true</Argument>
		<Argument name="YieldType">YIELD_DIPLOMACY</Argument>
		<Argument name="Amount">5</Argument>
	</Modifier>
    <Modifier id="CARD_AT_WAR_SUPPORT" collection="COLLECTION_OWNER" effect="EFFECT_DIPLOMACY_ADJUST_DIPLOMATIC_ACTION_TOKEN_BONUS">
		<Argument name="ActionType">DIPLOMACY_ACTION_DECLARE_WAR</Argument>
		<Argument name="OnlyWhenInitiator">true</Argument>
		<Argument name="Amount">2</Argument>
	</Modifier>
</GameEffects>